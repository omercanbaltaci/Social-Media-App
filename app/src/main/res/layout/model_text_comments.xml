<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/colorLightGray"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/model_addcomment_profilePicIV"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/model_addcomment_userNameTV"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_toRightOf="@id/model_addcomment_profilePicIV"
            android:text="sample@sample.com"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:text="00:00:00 00 Jan 2021"
            android:id="@+id/model_addcomment_currentDateTimeTV"
            android:layout_toRightOf="@id/model_addcomment_profilePicIV"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="10sp"
            android:paddingLeft="10dp"
            android:layout_below="@id/model_addcomment_userNameTV"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/model_addcomment_commentTV"
            android:layout_below="@id/model_addcomment_currentDateTimeTV"
            android:text="Sample"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</RelativeLayout>