<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/model_textStatus_RV"
    android:background="@color/white">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/model_textStatus_favoriteTextStatus"
        android:layout_marginRight="10dp"
        android:background="@color/background_tint"
        android:src="@drawable/ic_favorite_status"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:scaleType="centerCrop"
        android:id="@+id/model_textStatus_profileIV"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/model_textStatus_emailTV"
        android:layout_toRightOf="@id/model_textStatus_profileIV"
        android:text="email@email.com"
        android:textColor="@color/holo_orange_light"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/model_textStatus_dateTV"
        android:text="00:00:00 00 Ocak 2019"
        android:textColor="@color/holo_orange_light"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/model_textStatus_emailTV"
        android:layout_toRightOf="@id/model_textStatus_profileIV"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/model_textStatus_textStatusTV"
        android:text="Boş statü"
        android:textColor="@color/holo_orange_light"
        android:textSize="17sp"
        android:layout_below="@id/model_textStatus_profileIV"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/model_textStatus_LinearLayout"
        android:orientation="horizontal"
        android:layout_below="@id/model_textStatus_textStatusTV">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/model_textStatus_heartIV"
            android:src="@drawable/ic_heart"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/model_textStatus_heartCountTV"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:gravity="bottom|left"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/model_textStatus_hahaIV"
            android:src="@drawable/ic_haha"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/model_textStatus_hahaCountTV"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:gravity="bottom|left"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/model_textStatus_sadIV"
            android:src="@drawable/ic_sad"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/model_textStatus_sadCountTV"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:gravity="bottom|left"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/model_textStatus_commentIV"
            android:src="@drawable/ic_comments"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/model_textStatus_commentCountTV"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:gravity="bottom|left"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/model_textStatus_deleteIV"
            android:src="@drawable/ic_delete"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>


</RelativeLayout>