<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/FragaddTextThought_RL"
    android:background="@color/background_tint"
    tools:context=".Fragments.addTextThoughtFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/FragaddTextThought_textThoughtET"
        android:textColor="@color/not_selected_tint"
        android:hint="@string/textstatus_hint"
        android:textColorHint="@color/not_selected_tint"
        android:textSize="15sp"
        android:gravity="top|left"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="8dp"
        android:maxLength="200"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FragaddTextThought_RL_Inner"
        android:layout_below="@id/FragaddTextThought_textThoughtET"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Gönder"
            android:textSize="15dp"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/holo_orange_light"
            android:padding="10dp"
            android:id="@+id/FragaddTextThought_publishThoughtBtn"
            android:layout_alignParentLeft="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Düzenle"
            android:textSize="15dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/FragaddTextThought_publishThoughtBtn"
            android:backgroundTint="#D89F2C"
            android:padding="10dp"
            android:id="@+id/FragaddTextThought_editThoughtBtn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Geri dön"
            android:textSize="15dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/FragaddTextThought_editThoughtBtn"
            android:backgroundTint="#98701F"
            android:padding="10dp"
            android:id="@+id/FragaddTextThought_goBackBtn"/>

    </RelativeLayout>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/FragaddTextThought_progressBar"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>

</RelativeLayout>